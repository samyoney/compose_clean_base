<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.JetpackComposeBoilerplate" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/status_bar_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bg_transparent</item>
        <item name="windowSplashScreenAnimationDuration">10</item>
        <item name="android:windowBackground">@color/status_bar_color</item>
        <item name="postSplashScreenTheme">@style/Theme.JetpackComposeBoilerplate</item>
    </style>

</resources>